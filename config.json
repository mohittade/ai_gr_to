{
  "model": {
    "d_model": 512,
    "num_heads": 8,
    "num_encoder_layers": 6,
    "num_decoder_layers": 6,
    "d_ff": 2048,
    "dropout": 0.1,
    "max_seq_length": 128,
    "vocab_size": 32000
  },
  "training": {
    "batch_size": 32,
    "num_epochs": 30,
    "learning_rate": 0.0001,
    "warmup_steps": 4000,
    "label_smoothing": 0.1,
    "gradient_clip": 1.0,
    "checkpoint_frequency": 1,
    "validation_frequency": 1
  },
  "data": {
    "max_length": 128,
    "min_length": 3,
    "lowercase": true,
    "remove_duplicates": true,
    "train_split": 0.9,
    "val_split": 0.05,
    "test_split": 0.05
  },
  "paths": {
    "data_dir": "data",
    "checkpoint_dir": "checkpoints",
    "log_dir": "logs",
    "de_en_model": "checkpoints/de_en_best_model.pt",
    "en_mr_model": "checkpoints/en_mr_best_model.pt"
  },
  "api": {
    "host": "0.0.0.0",
    "port": 8000,
    "workers": 4,
    "reload": false,
    "cors_origins": ["*"],
    "max_batch_size": 32
  },
  "evaluation": {
    "metrics": ["bleu", "meteor"],
    "bleu_n_grams": [1, 2, 3, 4],
    "save_reports": true,
    "report_dir": "evaluation_results"
  }
}
